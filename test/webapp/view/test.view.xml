<mvc:View controllerName="test.test.controller.test"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:partner="blocks.partner"
    xmlns:customer="blocks.customer"
    xmlns:vendor="blocks.vendor"
    xmlns:forms="sap.ui.layout.form"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
    xmlns:t="sap.ui.table"
    xmlns:u="sap.ui.unified"
    xmlns:c="sap.ui.core"
    xmlns:sfb="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:sv="sap.ui.comp.smartvariants"
    xmlns:sf="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform">
    <m:Page id="page" title="{i18n>title}">
        <m:VBox alignItems="Center">
            <m:Image id="imagePreview" src="{CreateBPModel>/ImagePreviewSrc}" width="14rem" height="14rem" decorative="false" alt="Profile Image" class="customImageStyle" />
            <u:FileUploader id="fileUploader" buttonOnly="true" buttonText="이미지 업로드" uploadOnChange="false" change="onImageChange" fileType="jpg,png,jpeg, application/pdf" mimeType="image/jpeg,image/png, application/pdf" />
        </m:VBox>
        <m:Button icon="sap-icon://nav-back" tooltip="nav-back" press="onBack" />
    </m:Page>
</mvc:View>